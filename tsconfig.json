{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./built",
    "allowJs": true,
    "resolveJsonModule": true,  // Allow importing JSON modules
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
  },
  "include": ["**/*.ts", "firebase.ts"],
  "exclude": ["node_modules"]
}