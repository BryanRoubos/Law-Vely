{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true,  // Allow importing JSON modules
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts", "firebase.ts"],
  "exclude": ["node_modules"]
}